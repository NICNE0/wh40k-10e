  "terrain_rules": {
    "ruins": {
      "provides_cover": true,
      "save_bonus": 1,
      "obscuring_height": 5,
      "description": "Models wholly within 3\" of a ruins wall gain +1 to saves. Obscuring if 5\" or taller."
    },
    "craters": {
      "provides_cover": true,
      "save_bonus": 1,
      "obscuring_height": 0,
      "description": "Models wholly within get +1 to saves"
    },
    "woods": {
      "provides_cover": true,
      "save_bonus": 1,
      "blocks_los": false,
      "description": "Light cover, reduces visibility but doesn't block LOS"
    }
  },

